---
interface Props {
  facts: string[];
}
const { facts } = Astro.props;
---

<ul>
  {facts.map((fact) => <li>{fact}</li>)}
</ul>

<style>
  ul {
    list-style: none;
    padding: 1rem;
    border-radius: 8px;
    background: #f0f4ff;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #ddd;
    color: #333;
    font-size: 1rem;
  }

  li:last-child {
    border-bottom: none;
  }
</style>